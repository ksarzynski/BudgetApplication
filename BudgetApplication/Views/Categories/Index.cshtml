@model IEnumerable<BudgetApplication.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>
                <p asp-display-for="@item.CategoryName"></p>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryID"class="btn btn-warning" style="height: 35px">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.CategoryID"class="btn btn-success" style="height: 35px">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger" style="height: 35px">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
