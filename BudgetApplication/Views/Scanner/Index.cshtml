@model BudgetApplication.Models.Tesseract;
@{
    ViewData["Title"] = "Budget Application";
}

<form method="post" enctype="multipart/form-data" asp-controller="Scanner" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload your receipt scan using this form:</p>
            <input type="file" name="files" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
<br /> <br /><br /><br /><br />
<div class="w3-container">
    @ViewBag.Message
</div>