@model IEnumerable<BudgetApplication.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<h2>Items</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Subcategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subcategory.SubcategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemID"class="btn btn-warning" style="height: 35px">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.ItemID" class="btn btn-success" style="height: 35px">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ItemID" class="btn btn-danger" style="height: 35px">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
